@model shop.Models.Mathang

@{
    ViewData["Title"] = "Edit";
}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Sửa mặt hàng</h1>
        <form asp-action="Editmathang">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MaMh" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Ten" class="form-label">Tên mặt hàng</label>
                        <input asp-for="Ten" class="form-control" />
                        <span asp-validation-for="Ten" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GiaGoc" class="form-label">Giá gốc</label>
                        <input asp-for="GiaGoc" class="form-control" />
                        <span asp-validation-for="GiaGoc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="GiaBan" class="form-label">Giá bán</label>
                        <input asp-for="GiaBan" class="form-control" />
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoLuong" class="form-label">số lượng</label>
                        <input asp-for="SoLuong" class="form-control" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HinhAnh" class="form-label">Hình ảnh</label>
                        <input type="file" asp-for="HinhAnh" class="form-control" />
                        <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaDm" class="form-label">Danh mục</label>
                        <select asp-for="MaDm" class="form-select" asp-items="ViewBag.MaDm"></select>
                        <span asp-validation-for="MaDm" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LuotXem" class="form-label">Lượt xem</label>
                        <input asp-for="LuotXem" class="form-control" />
                        <span asp-validation-for="LuotXem" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LuotMua" class="form-label">Lượt mua</label>
                        <input asp-for="LuotMua" class="form-control" />
                        <span asp-validation-for="LuotMua" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3 text-center">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-4">
            <a href="@Url.Action("Indexmathang")" class="btn btn-secondary">Về mặt hàng</a>
        </div>
    </div>

    <br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
