@model shop.Models.Khachhang

@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-4 text-danger">Xóa khách hàng</h1>

<div class="alert alert-warning" role="alert">
    <h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
</div>

<div class="card shadow">
    <div class="card-body">
        <h4 class="card-title mb-4">Thông tin khách hàng</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ten)</dd>

            <dt class="col-sm-3 fw-bold">Điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DienThoai)</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold">Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex gap-3">
    <form asp-action="Deletekhachhang" class="mb-0">
        <input type="hidden" asp-for="MaKh" />
        <button type="submit" class="btn btn-danger">Xóa</button>
    </form>
    <a asp-action="Indexkhachhang" class="btn btn-secondary">Quay lại danh sách</a>
</div>

