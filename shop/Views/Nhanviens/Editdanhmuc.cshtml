@model shop.Models.Danhmuc

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Chỉnh sửa danh mục</h2>

    <div class="card p-4 shadow-sm">
        <form asp-action="Editdanhmuc">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="MaDm" />

            <div class="form-group mb-3">
                <label asp-for="Ten" class="form-label">Tên danh mục</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Indexdanhmuc" class="btn btn-secondary">Về danh sách danh mục</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
