@model IEnumerable<shop.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Hóa Đơn</h1>

<p class="mb-4">
    <a asp-action="Createhoadon" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ngày</th>
            <th>Tổng  tiền</th>
            <th>Trạng thái</th>
            <th>Mã khách hàng</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ngay)</td>
                <td>@Html.DisplayFor(modelItem => item.TongTien)</td>
                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKh)</td>
                <td class="text-center">
                    <a asp-action="Edithoadon" asp-route-id="@item.MaHd" class="btn btn-warning btn-sm me-2">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Detailshoadon" asp-route-id="@item.MaHd" class="btn btn-info btn-sm me-2">
                        <i class="bi bi-eye"></i> Xem
                    </a>
                    <a asp-action="Deletehoadon" asp-route-id="@item.MaHd" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
