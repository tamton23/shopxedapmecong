@{
    ViewData["Title"] = "Home Page";
}@if (ViewBag.khachhang != null)
{
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white text-center">
                <h3>Chào, @ViewBag.khachhang.Ten!</h3>
            </div>
            <div class="card-body">
                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                    <p>@ViewBag.khachhang.Email</p>
                </div>

                <!-- Họ tên -->
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-person-circle"></i> Họ tên</label>
                    <p>@ViewBag.khachhang.Ten</p>
                </div>

                <!-- Điện thoại -->
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-telephone"></i> Điện thoại</label>
                    <p>@ViewBag.khachhang.DienThoai</p>
                </div>
                <div class="mb-3">
                    <label>Địa chỉ</label>
                    @ViewBag.khachhang.Diachis
                </div>
                <div class="mb-3">
                    <label>Đơn hàng đã mua</label>
                    @ViewBag.khachhang.Hoadons
                </div>
                <!-- Đăng xuất -->
                <div class="d-flex justify-content-center mt-4">
                    <a asp-action="Signout" class="btn btn-danger">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Vui lòng <a asp-controller="Customer" asp-action="Login">Đăng nhập</a></p>
}
